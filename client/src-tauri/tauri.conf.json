{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Battlecode Client",
  "version": "26.0.0",
  "identifier": "com.battlecode.client.2026",
  "build": {
    "beforeDevCommand": { "script": "npm run watch", "cwd": "../" },
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Battlecode Client",
        "width": 1200,
        "height": 760,
        "resizable": true,
        "fullscreen": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "externalBin": [],
    "icon": [
      "../icons/icon.png",
      "../icons/icon.icns",
      "../icons/icon.ico"
    ],
    "resources": [],
    "targets": "all"
  }
}
